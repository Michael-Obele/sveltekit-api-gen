{
	"name": "sveltekit-openapi-generator",
	"version": "0.1.0",
	"description": "Generate OpenAPI 3.0 specifications from SvelteKit server endpoints using JSDoc @swagger annotations",
	"type": "module",
	"license": "MIT",
	"author": "Michael Obele <https://github.com/Michael-Obele>",
	"repository": {
		"type": "git",
		"url": "https://github.com/Michael-Obele/sveltekit-api-gen"
	},
	"bugs": {
		"url": "https://github.com/Michael-Obele/sveltekit-api-gen/issues"
	},
	"homepage": "https://github.com/Michael-Obele/sveltekit-api-gen#readme",
	"keywords": [
		"sveltekit",
		"openapi",
		"swagger",
		"vite-plugin",
		"api-documentation",
		"jsdoc",
		"openapi-spec",
		"rest-api"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE",
		"CHANGELOG.md"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test"
	},
	"peerDependencies": {
		"vite": "^5.0.0 || ^6.0.0 || ^7.0.0",
		"@sveltejs/kit": "^2.0.0",
		"svelte": "^4.0.0 || ^5.0.0"
	},
	"dependencies": {
		"glob": "^10.3.12",
		"openapi-merge": "^1.3.3",
		"swagger-jsdoc": "^6.2.8"
	},
	"devDependencies": {
		"@playwright/test": "^1.55.1",
		"@sveltejs/adapter-auto": "^6.1.0",
		"@sveltejs/kit": "^2.43.2",
		"@sveltejs/package": "^2.5.4",
		"@sveltejs/vite-plugin-svelte": "^6.2.0",
		"@types/lodash-es": "^4.17.12",
		"@types/swagger-ui": "^5.21.1",
		"@vitest/browser": "^3.2.4",
		"lodash-es": "^4.17.21",
		"openapi-types": "^12.1.3",
		"playwright": "^1.55.1",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"publint": "^0.3.13",
		"svelte": "^5.39.5",
		"svelte-check": "^4.3.2",
		"swagger-ui": "^5.29.5",
		"swagger-ui-dist": "^5.29.5",
		"typescript": "^5.9.2",
		"vite": "^7.1.7",
		"vitest": "^3.2.4",
		"vitest-browser-svelte": "^1.1.0"
	}
}
